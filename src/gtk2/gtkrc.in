# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
$light gtk-color-scheme = "text_color:black\nbase_color:white"
$dark gtk-color-scheme = "text_color:#cccccc\nbase_color:#2e2e2e"
# Foreground/background
$light gtk-color-scheme = "fg_color:#202020\nbg_color:#eeeeee"
$dark gtk-color-scheme = "fg_color:#cccccc\nbg_color:#3e3e3e"
#Â Selected foreground/background
$tango $light gtk-color-scheme = "selected_fg_color:#101010\nselected_bg_color:#bcd9fa"
$tango $dark gtk-color-scheme = "selected_fg_color:#dddddd\nselected_bg_color:#275d9b"

$salsa $light gtk-color-scheme = "selected_fg_color:#101010\nselected_bg_color:#dbbfd8"
$salsa $dark gtk-color-scheme = "selected_fg_color:#dddddd\nselected_bg_color:#6f406a"

$rumba $light gtk-color-scheme = "selected_fg_color:#101010\nselected_bg_color:#cec7ef"
$rumba $dark gtk-color-scheme = "selected_fg_color:#dddddd\nselected_bg_color:#544799"

$jive $light gtk-color-scheme = "selected_fg_color:#101010\nselected_bg_color:#b9e1da"
$jive $dark gtk-color-scheme = "selected_fg_color:#dddddd\nselected_bg_color:#286d61"

# Insensitive foreground/background
$light gtk-color-scheme = "insensitive_fg_color:#959595\ninsensitive_bg_color:#f5f5f5"
$dark gtk-color-scheme = "insensitive_fg_color:#777777\ninsensitive_bg_color:#3b3b3b"
# Menus
$light gtk-color-scheme = "menu_color:#fbfbfb"
$dark gtk-color-scheme = "menu_color:#343434"
# Links
$tango $light gtk-color-scheme = "link_color:#225da0\nvisited_link_color:#194476"
$tango $dark gtk-color-scheme = "link_color:#5390d4\nvisited_link_color:##337acc"

$salsa $light gtk-color-scheme = "link_color:#683b63\nvisited_link_color:#482944"
$salsa $dark gtk-color-scheme = "link_color:#aa6ba3\nvisited_link_color:#96568f"

$rumba $light gtk-color-scheme = "link_color:#4d3ca4\nvisited_link_color:#3b2e7f"
$rumba $dark gtk-color-scheme = "link_color:#8c81c5\nvisited_link_color:#7365b8"

$jive $light gtk-color-scheme = "link_color:#26695d\nvisited_link_color:#19443c"
$jive $dark gtk-color-scheme = "link_color:#44b7a3\nvisited_link_color:#399989"

# Treeview headers
$light gtk-color-scheme = "column_header_color:#797979\nhover_column_header_color:#4d4d4d"
$dark gtk-color-scheme = "column_header_color:#8d8d8d\nhover_column_header_color:#adadad"
# Window decoration
$light gtk-color-scheme = "window_color:#f8f8f8"
$dark gtk-color-scheme = "window_color:#434343"
# Tooltips
$light gtk-color-scheme = "tooltip_fg_color:#202020\ntooltip_bg_color:#ececdc"
$dark gtk-color-scheme = "tooltip_fg_color:#d2d2d2\ntooltip_bg_color:#505050"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "xfce.rc"
